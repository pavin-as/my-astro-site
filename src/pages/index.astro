    </div>
  </section>

  <!-- Latest Updates Section -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="section-title">Latest updates</h2>
      </div>
      
      <div class="updates-carousel max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {[
            {
              image: "/wp-content/uploads/2024/02/5-2.png",
              title: "Innovative Healthcare Solutions",
              description: "Whatever boy her exertion his extended. Ecstatic followed handsome drawings entirely one yet outweigh. Oacceptance insipidity remarkably."
            },
            {
              image: "/wp-content/uploads/2024/02/3-2.png",
              title: "Sustainable Wellness Initiatives",
              description: "Whatever boy her exertion his extended. Ecstatic followed handsome drawings entirely one yet outweigh. Oacceptance insipidity remarkably."
            }
          ].map((update) => (
            <div class="update-card relative overflow-hidden rounded-lg shadow-lg group">
              <div class="relative h-64">
                <img 
                  src={update.image} 
                  alt={update.title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="text-center text-white p-6">
                    <h3 class="text-xl font-bold mb-2">{update.title}</h3>
                    <p class="text-sm">{update.description}</p>
