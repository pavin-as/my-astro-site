      grid-template-columns: repeat(2, 1fr);
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .modal-content {
      width: 95%;
      margin: 10% auto;
    }
    
    .project-details-grid {
      grid-template-columns: 1fr;
    }
    
    .project-actions {
      flex-direction: column;
      align-items: center;
    }
    
    nav {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style> 