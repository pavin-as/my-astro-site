  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.5rem;
    }
    
    .portfolio-grid {
      grid-template-columns: 1fr;
    }
    
    .filter-buttons {
      flex-direction: column;
      align-items: center;
    }
    
