  /* Footer */
  footer {
    background: #2c3e50;
    color: white;
    margin-top: 4rem;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 20px 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .footer-section h3,
  .footer-section h4 {
    margin-bottom: 1rem;
    color: #ecf0f1;
  }
  
  .footer-section ul {
    list-style: none;
  }
  
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  
  .footer-section a {
    color: #bdc3c7;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-section a:hover {
    color: #ecf0f1;
  }
  
  .footer-bottom {
    text-align: center;
    padding: 1.5rem 20px;
    border-top: 1px solid #34495e;
    color: #bdc3c7;
  }
  
