---
const currentPath = Astro.url.pathname;
---

<header class="header bg-white shadow-sm sticky top-0 z-50">
  <div class="container">
    <nav class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="logo">
        <a href="/" class="flex items-center">
          <img 
            src="/wp-content/uploads/2021/12/logo-new-sampadavr.png" 
            alt="Sampada VR Logo" 
            class="h-12 w-auto"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class={`nav-link ${currentPath === '/' ? 'active' : ''}`}
        >
          Home
        </a>
        <div class="relative group">
          <a 
            href="/about/" 
            class={`nav-link ${currentPath.startsWith('/about') ? 'active' : ''}`}
          >
            About
            <i class="fas fa-chevron-down ml-1 text-xs"></i>
          </a>
          <div class="absolute top-full left-0 bg-white shadow-lg rounded-md py-2 min-w-[200px] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300">
            <a href="/about-dr-sameera-v-v/" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              About Dr. Sameera V V
            </a>
          </div>
        </div>
        <a 
          href="/why-sampada-vr/" 
          class={`nav-link ${currentPath === '/why-sampada-vr/' ? 'active' : ''}`}
        >
          Why Sampada VR
        </a>
        <a 
          href="/treatments/" 
          class={`nav-link ${currentPath === '/treatments/' ? 'active' : ''}`}
        >
          Treatments
        </a>
        <a 
          href="/blog/" 
          class={`nav-link ${currentPath === '/blog/' ? 'active' : ''}`}
        >
          Blog
        </a>
        <a 
          href="/contact-us/" 
          class={`nav-link ${currentPath === '/contact-us/' ? 'active' : ''}`}
        >
          Contact Us
        </a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact-us/" class="btn btn-primary">
          Get Started
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn" 
        class="md:hidden p-2 rounded-md hover:bg-gray-100"
        aria-label="Toggle mobile menu"
      >
        <i class="fas fa-bars text-xl"></i>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden bg-white border-t">
      <div class="py-4 space-y-2">
        <a 
          href="/" 
          class={`mobile-nav-link ${currentPath === '/' ? 'active' : ''}`}
        >
          Home
        </a>
        <div class="mobile-dropdown">
          <button class="mobile-nav-link w-full text-left flex items-center justify-between">
            About
            <i class="fas fa-chevron-down text-xs"></i>
          </button>
          <div class="mobile-dropdown-content hidden pl-4">
            <a href="/about-dr-sameera-v-v/" class="block py-2 text-sm text-gray-600 hover:text-gray-900">
              About Dr. Sameera V V
            </a>
          </div>
        </div>
        <a 
          href="/why-sampada-vr/" 
          class={`mobile-nav-link ${currentPath === '/why-sampada-vr/' ? 'active' : ''}`}
        >
          Why Sampada VR
        </a>
        <a 
          href="/treatments/" 
          class={`mobile-nav-link ${currentPath === '/treatments/' ? 'active' : ''}`}
        >
          Treatments
        </a>
        <a 
          href="/blog/" 
          class={`mobile-nav-link ${currentPath === '/blog/' ? 'active' : ''}`}
        >
          Blog
        </a>
        <a 
          href="/contact-us/" 
          class={`mobile-nav-link ${currentPath === '/contact-us/' ? 'active' : ''}`}
        >
          Contact Us
        </a>
        <div class="pt-4">
          <a href="/contact-us/" class="btn btn-primary w-full text-center">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .nav-link {
    @apply text-gray-700 hover:text-primary-600 font-medium transition-colors duration-200 relative;
  }

  .nav-link.active {
    @apply text-primary-600;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--primary-color);
  }

  .mobile-nav-link {
    @apply block py-2 px-4 text-gray-700 hover:text-primary-600 hover:bg-gray-50 font-medium transition-colors duration-200;
  }

  .mobile-nav-link.active {
    @apply text-primary-600 bg-primary-50;
  }

  .mobile-dropdown-content {
    @apply bg-gray-50 rounded-md;
  }
</style>

<script>
  // Mobile menu functionality
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileDropdowns = document.querySelectorAll('.mobile-dropdown');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  mobileDropdowns.forEach(dropdown => {
    const button = dropdown.querySelector('button');
    const content = dropdown.querySelector('.mobile-dropdown-content');
    const icon = button?.querySelector('i');

    button?.addEventListener('click', () => {
      content?.classList.toggle('hidden');
      icon?.classList.toggle('fa-chevron-down');
      icon?.classList.toggle('fa-chevron-up');
    });
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!mobileMenuBtn?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });
</script> 